@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "All Roles";
}
<style>
    .searchClass{
        display:flex;
        justify-content:center;
    }
</style>
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Id)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.CreatedAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.CreatedAt.Day)-@Html.DisplayFor(m => item.CreatedAt.Month)-@Html.DisplayFor(m => item.CreatedAt.Year)</td>
                    <partial name="PartialViews/_ButtonsPartialView" model="item.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles Found!!</h3>
    </div>
}

