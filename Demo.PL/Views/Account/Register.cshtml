@model RegisterViewModel
@{
    ViewData["Title"] = "Register Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="test-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			<input class="text" type="text" asp-for="@Model.FName" placeholder="Your First Name" required="">
			<span asp-validation-for="@Model.FName" class="text-danger"></span>
			<br />

			<input class="text" type="text" asp-for="@Model.LName" placeholder="Your Last Name" required="">
			<span asp-validation-for="@Model.LName" class="text-danger"></span>


			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email" class="text-danger"></span>


			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>


			<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>


			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Register">
		</form>
		<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
} 