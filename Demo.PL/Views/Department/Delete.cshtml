@model DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-secondary text-center>Are You Sure To Delete @Model.Name Department</h1>

<div asp-validation-summary="All">
</div>

<div class="row">
    <div class="col-6">
        <form asp-action="Delete">
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-label">Code:</label>
                <input asp-for="@Model.Code" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label">Name:</label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model.DateOfCreation" class="col-form-label">Date of Creation:</label>
                <input asp-for="@Model.DateOfCreation" class="form-control" readonly />
            </div>

            <br />
            <div class="d-flex justify-content-end">
                <input type="submit" value="Delete" class="btn btn-danger m-2" />
                <a class="btn btn-secondary m-2" asp-action="index" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>
    </div>
</div>

