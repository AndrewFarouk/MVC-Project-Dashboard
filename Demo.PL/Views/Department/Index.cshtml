@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-dark">All Departments</h1>
<br />

<a asp-action="Create" class="btn btn-primary">Create New Department</a>
<br />
<br />

@if(TempData["Message"] != null)
{
    <div id="MassageDiv" class="alert alert-success">
        @TempData["Message"]
    </div>
}
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Code)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
                <th>Employees</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
               <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_ButtonPartialView" model="@department.Id" />

                        <td>
                            <a asp-controller="Department" asp-action="GetAllEmployees" asp-route-id="@department.Id">
                            <i class="fas fa-eye" style="color: darkslategray;"></i>
                            </a>
                        </td>
                
                </tr> 
            }
        </tbody>
        </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Departments Found!!</h3>
    </div>
}

